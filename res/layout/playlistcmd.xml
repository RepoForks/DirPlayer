<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/plc_ibn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/plc_ibn_add" />

    <Button
        android:id="@+id/plc_ibn_del"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/plc_ibn_del" />

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <TextView
        android:id="@+id/plc_ibn_seq_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plc_ibn_seq" />
    
    <Button
        android:id="@+id/plc_ibn_seq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/play_seq_normal" />
    
</LinearLayout>
</LinearLayout>